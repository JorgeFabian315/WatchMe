@model AdminPeliculasRepartoViewModel
@{
    ViewData["Title"] = "Reparto";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <h1 class="my-4 py-2">Agregar reparto</h1>
    <h3 class="my-4 py-2">Actores de la pelicula <span style="color: #E70010;">@Model.TituloPelicula</span></h3>
    <form class="px-3 mt-3">

        @foreach (var a in Model.Actores)
        {
            <div class=" my-4 py-2">
                <label class="px-4 pb-3" style="font-weight: 600;">
                    @a.NombreActor
                </label>
                <input type="text" class="form-control p-3" asp-for="@a.Personaje" required>
            </div>
        }


        <p class="pb-2" id="Errores"></p>
        <div class="mt-5">
            <input type="submit" class="btn btn-success btn-lg " value="Guardar" />
            <a href="IndexActor.html" class="btn btn-danger btn-lg ms-3">Cancelar</a>
        </div>
    </form>
</div>
